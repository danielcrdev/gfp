{
  "openapi": "3.0.0",
  "info": {
    "title": "Gestão Financeira Pessoal | Orçamento",
    "description": "Gestão do Orçamento",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5001/",
      "description": "GFP - Aplicação Principal"
    }
  ],
  "paths": {
    "/orcamento/{idOrcam}": {
      "get": {
        "tags": ["Orçamento"],
        "summary": "Consulta orçamento por Identificador",
        "description": "Consulta orçamento por Identificador",
        "operationId": "getById",
        "parameters": [
          {
            "name": "idOrcam",
            "in": "path",
            "description": "Identificador do orçamento",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Consulta com Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {"$ref": "#/components/schemas/orcamento"}
                }
              }
            }
          },
          "400": {"description": "Parâmetros de entrada inválidos"}
        }
      }
    },
    "/orcamento": {
      "get": {
        "tags": ["Orçamento"],
        "summary": "Consulta lista de orçamentos",
        "description": "Consulta lista de orçamentos",
        "operationId": "getAll",
        "parameters": [
          {
            "name": "user",
            "in": "query",
            "description": "Código do usuário",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Consulta com Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/orcamento"
                  }
                }
              }
            }
          },
          "400": {"description": "Parâmetros de entrada inválidos"}
        }
      },
      "post": {
        "tags": ["Orçamento"],
        "summary": "Inserir orçamento",
        "description": "Inserir orçamento",
        "operationId": "post",
        "requestBody": {
          "description": "Objeto orcamento para inserir",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/orcamento"
              }
            }
          }
        },
        "responses": {
          "201": {"description": "Inserção com sucesso"},
          "400": {"description": "Parâmetros de entrada inválidos"},
          "409": {"description": "Já existe o registro no sistema"}
        }
      }
    }
  },
  "components": {
    "schemas": {
      "orcamento": {
        "required": [
          "idOrcam",
          "idSitOrcam",
          "desOrcam",
          "datIniExerc",
          "datFimExerc"
        ],
        "type": "object",
        "properties": {
          "idOrcam": {
            "type": "number",
            "example": "1"
          },
          "idSitOrcam": {
            "type": "number",
            "example": "1"
          },
          "desOrcam": {
            "type": "string",
            "example": "Orçamento do ano 2021"
          },
          "datIniExerc": {
            "type": "string",
            "example": "2021-01-01"
          },
          "datFimExerc": {
            "type": "string",
            "example": "2021-01-01"
          }
        }
      }
    }
  }
}